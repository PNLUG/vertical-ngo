<odoo>
    <!-- ############# EXPECTED SKILL #################### -->
    <record model="ir.ui.view" id="expected_skill_tree">
        <field name="name">Expected Skill</field>
        <field name="model">expected.skill</field>
        <field name="arch" type="xml">
            <tree string="Skills">
                <field name="skill_id"/>
                <field name="min_qty" string="Min Qty"/>
                <field name="max_qty" string="Max Qty"/>
            </tree>
        </field>
    </record>

    <!-- ############# EXPECTED EQUIPMENT #################### -->
    <record model="ir.ui.view" id="expected_equipment_category_tree">
        <field name="name">Expected Equipment Category</field>
        <field name="model">expected.eqpmnt_cat</field>
        <field name="arch" type="xml">
            <tree string="Equipment Category">
                <field name="eqp_cat_id"/>
                <field name="min_qty" string="Min Qty"/>
                <field name="max_qty" string="Max Qty"/>
            </tree>
        </field>
    </record>

    <!-- ############# EXPECTED VEHICLES #################### -->
    <record model="ir.ui.view" id="expected_vehicle_type_tree">
        <field name="name">Expected Vehicle Types</field>
        <field name="model">expected.vhcl_type</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Type">
                <field name="vehicle_type_id"/>
                <field name="min_qty" string="Min Qty"/>
                <field name="max_qty" string="Max Qty"/>
            </tree>
        </field>
    </record>

</odoo>
