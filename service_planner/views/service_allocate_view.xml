<odoo>

    <!-- ############# SERVICE ALLOCATED #################### -->
    <record model="ir.ui.view" id="service_allocate_tree">
        <field name="name">Service Allocated</field>
        <field name="model">service.allocate</field>
        <field name="arch" type="xml">
            <tree string="Allocated">
                <!-- _TODO_ _FIX_ 
                    direct call to service.rule.double_assign on the button 
                    move to view header
                    -->
                <button name="double_assign"
                        string="Check rules"
                        context = "{'resource_type':'all', 'srv_id': -1}"
                        type="object" class="btn-primary"/>
                <field name="id"/>
                <field name="service_container_id"/>
                <field name="service_template_id"/>
                <field name="service_color"
                    widget="color" options="{'readonly_mode': 'color'}"/>
                <field name="state"/>
                <field name="scheduled_start"/>
                <field name="scheduled_stop"/>
                <field name="start_real"/>
                <field name="stop_real"/>
                <field name="employee_ids" widget="many2many_tags"/>
                <field name="vehicle_ids" widget="many2many_tags"/>
                <field name="equipment_ids" widget="many2many_tags"/>
            </tree>
        </field>
     </record>

    <record model="ir.ui.view" id="service_allocate_form">
        <field name="name">Service Allocated</field>
        <field name="model">service.allocate</field>
        <field name="arch" type="xml">
            <form string="Allocated">
                <group>
                    <group>
                        <group>
                            <field name="service_template_id"/>
                            <field name="service_container_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                    </group>
                </group>
                <group>
                    <group>
                        <group>
                            <field name="scheduled_start"/>
                            <field name="scheduled_stop"/>
                            <field name="start_real"/>
                            <field name="stop_real"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group>
                        <field name="vehicle_ids" widget="many2many_tags"/>
                        <field name="employee_ids" widget="many2many_tags"/>
                        <field name="equipment_ids" widget="many2many_tags"/>
                        <!-- _TODO_ _FIX_ direct
                            call to service.rule.double_assign on the button -->
                        <button name="double_assign"
                                string="Check rules"
                                context = "{'resource_type':'all', 'srv_id': id}"
                                type="object" class="btn-primary"/>
                    </group>
                </group>
            </form>
        </field>
     </record>

    <record model="ir.ui.view" id="service_allocate_calendar" >
        <field name="name">Service Calendar</field>
        <field name="model">service.allocate</field>
        <field name="arch" type="xml">
            <!-- _TODO_ set background color -->
            <calendar
                date_start="scheduled_start"
                date_stop="scheduled_stop"
                color="service_template_id"
                mode="week"
                >
                <field name="id"/>
                <field name="service_template_id"/>
                <field name="employee_names"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="service_allocate_timeline" >
        <field name="name">Service Timeline</field>
        <field name="model">service.allocate</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <!-- _TODO_ set background color -->
            <timeline date_start="scheduled_start"
                      date_stop="scheduled_stop"
                      string="Service"
                      default_group_by="service_container_id"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      colors="#ff0000:employee_ids == false;#00ff00:employee_ids == true;"
                      dependency_arrow_old="task_dependency_ids">
                <field name="id"/>
                <templates>
                    <div t-name="timeline-item">
                        From 
                        <span t-esc="record.scheduled_start"/>
                        to
                        <span t-esc="record.scheduled_stop"/>
                        <br/>
                        Employee
                        <!-- _TODO_ show computed field -->
                        <span t-esc="record.employee_ids"/>
                        qui non mostra il campo =&gt;<span t-esc="record.employee_names"/>&lt;=
                    </div>
                </templates>
            </timeline>
        </field>
    </record>

</odoo>
