<odoo>
    <!-- add menu voice for Service -->

    <!-- manage Template  -->
    <menuitem
        id = "menu_template"
        name = "Template"
        parent = "menu_service_planner"
        sequence = "120"
        />

    <!-- Reporting -->
    <!-- _todo_ -->
    <act_window
        id = "act_service_report"
        name = "Report"
        res_model = "service.allocate"
        view_mode = "tree"
        />

    <menuitem
        id = "menu_service_report"
        name = "Report"
        parent = "menu_service_planner"
        sequence = "140"
        action = "act_service_report"
        />

    <!-- manage Service Planner -->
    <menuitem
        id="menu_service_planner"
        name="Service Planner"
        web_icon="service_planner,static/description/icon.png"
        sequence="110"/>

    <!-- manage Global Services -->
    <act_window
        id = "act_service_global"
        name = "Global Service"
        res_model = "service.global"
        view_mode = "tree,form"
        />

    <menuitem
        id = "menu_service_global"
        name = "Global Service"
        parent = "menu_template"
        sequence = "20"
        action = "act_service_global"
        />

    <!-- manage Template Services -->
    <act_window
        id = "act_service_template"
        name = "Service Template"
        res_model = "service.template"
        view_mode = "tree,form"
        />

    <menuitem
        id = "menu_service_template"
        name = "Service Template"
        parent = "menu_template"
        sequence = "5"
        action = "act_service_template"
        />

    <!-- manage Services Allocated -->
    <act_window
        id = "act_service_allocate_cal"
        name = "Service"
        res_model = "service.allocate"
        view_mode = "calendar,timeline,tree,form"
        />

    <menuitem
        id = "menu_service_allocate_cal"
        name = "Service"
        parent = "menu_service_planner"
        sequence = "100"
        action = "act_service_allocate_cal"
        />

</odoo>
