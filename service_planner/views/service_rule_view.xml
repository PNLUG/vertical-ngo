<odoo>

    <!-- ############# SERVICE RULE #################### -->
    <record model="ir.ui.view" id="service_rule_tree">
        <field name="name">Service Rule</field>
        <field name="model">service.rule</field>
        <field name="arch" type="xml">
            <tree string="Rule">
                <field name="description"/>
                <field name="method"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="service_rule_form">
        <field name="name">Service Rule</field>
        <field name="model">service.rule</field>
        <field name="arch" type="xml">
            <form string="Service Rule">
                <group>
                    <group>
                        <group>
                            <field name="method"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <button name="rule_call" string="Check rule"
                                    context = "{'rule_name':'method'}"
                                    type="object" class="btn-primary"/>
                            <!--
                            <button name="%(service_planner.service_generate_wizard)d"
                                attrs="{'invisible':[('off_duty','!=',False)]}"
                                string="Generate Services" type="action"
                                class="oe_highlight"/>
                            -->
                        </group>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- ############# SERVICE RULE CLASS #################### -->
    <record model="ir.ui.view" id="service_ruleclass_tree">
        <field name="name">Service Rule Class</field>
        <field name="model">service.ruleclass</field>
        <field name="arch" type="xml">
            <tree string="Rule Class">
                <field name="name"/>
                <field name="rule_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="service_ruleclass_form">
        <field name="name">Service Rule Class</field>
        <field name="model">service.ruleclass</field>
        <field name="arch" type="xml">
            <form string="Service Rule Class">
                <group>
                    <group>
                        <group>
                            <h1><field name="name"/></h1>
                        </group>
                        <group>
                            <field name="rule_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
